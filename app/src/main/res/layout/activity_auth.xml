<!--            android:text="본인인증2"-->
<!--            android:textColor="#FFEB3B"-->
<!--            android:textStyle="bold"-->
<!--            android:visibility="visible"/>-->

        <Button
            android:id="@+id/signInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FF5722"
            android:text="회원가입 아직 구현 안함"
            android:textColor="#FFEB3B"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Button
            android:id="@+id/googleAuthInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF5722"
            android:text="구글인증"
            android:textColor="#FFEB3B"
            android:textStyle="bold"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/authEmailEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/authPasswordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="패스워드 6자 이상"
            android:inputType="textPassword"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/authPassword2Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="패스워드 확인"
            android:inputType="textPassword"
            android:visibility="gone"/>

        <Button
            android:id="@+id/signInBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF5722"
            android:text="가입(인증확인 가능한 이메일로 가입해주세요)"
            android:textColor="#FFEB3B"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Button
            android:id="@+id/logInBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF5722"
            android:text="로그인"
            android:textColor="#FFEB3B"
            android:textStyle="bold"
            android:visibility="gone"/>



    </LinearLayout>
    </ScrollView>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1537114386989171/3273279993">
    </com.google.android.gms.ads.AdView>

</androidx.constraintlayout.widget.ConstraintLayout>